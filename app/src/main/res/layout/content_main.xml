<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">
    <Button
            android:text="About ALC 4.0"
            android:layout_width="204dp"
            android:layout_height="87dp"
            android:id="@+id/about_alc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/ALC_About" android:background="@android:color/holo_orange_dark"/>
<!--            android:onClick="onClick"/>-->
    <Button
            android:text="My Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profiles"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.49"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/about_alc"
            android:layout_marginBottom="314dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@android:color/holo_blue_bright"/>
    <Button
            android:layout_width="243dp"
            android:layout_height="69dp"
            android:inputType="textPersonName"
            android:text="Welcome to ALC 4.0"
            android:ems="10"
            android:id="@+id/ALC_About"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarAlwaysDrawVerticalTrack="true" android:background="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat" android:fontFamily="@font/almendra_sc"
            android:typeface="sans" android:textSize="24sp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>