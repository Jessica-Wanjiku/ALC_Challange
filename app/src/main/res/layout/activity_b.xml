<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:isScrollContainer="true"
        android:scrollbarAlwaysDrawHorizontalTrack="true" android:scrollbarAlwaysDrawVerticalTrack="true">


    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar2" app:title="My Profile"
            android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
    <ImageView
            android:layout_width="310dp"
            android:layout_height="112dp" app:srcCompat="@drawable/datastore"
            android:id="@+id/image_Pic" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp" android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.582"/>
    <EditText
            android:text="Name: Jessica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_Name" app:layout_constraintStart_toStartOf="@+id/image_Pic"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="@+id/image_Pic"
            app:layout_constraintHorizontal_bias="0.498" android:hint="Name" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/image_Pic" android:layout_marginEnd="4dp"/>
    <EditText
            android:text="Track"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/text_Track" android:hint="Track"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/image_Pic" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/text_Country"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="@+id/image_Pic"/>
    <EditText
            android:text="Country"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/text_Country"
            app:layout_constraintStart_toStartOf="@+id/image_Pic" app:layout_constraintEnd_toEndOf="@+id/image_Pic"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_Name"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edit_Email"
            app:layout_constraintEnd_toEndOf="@+id/image_Pic"
            app:layout_constraintStart_toStartOf="@+id/image_Pic"
            android:hint="Email" android:layout_marginEnd="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/text_Track"
            android:layout_marginStart="4dp"
            android:singleLine="false"
            android:text="Email"
            style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox.Dense"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/edit_Phone"
            app:layout_constraintStart_toStartOf="@+id/image_Pic"
            app:layout_constraintEnd_toEndOf="@+id/image_Pic"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_Email"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:hint="Phone Number"
            style="@style/Widget.MaterialComponents.TextInputEditText.FilledBox.Dense"
            android:text="Phone Number"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Slack Username"
            android:ems="10"
            android:id="@+id/edit_slack"
            android:hint="Slack Username"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_Phone"
            app:layout_constraintEnd_toEndOf="@+id/image_Pic"
            app:layout_constraintStart_toStartOf="@+id/image_Pic"/>

</android.support.constraint.ConstraintLayout>

